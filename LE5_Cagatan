#include <stdio.h>

int main() {
    int num;
    int sum = 0;

printf("Enter positive numbers to ADD (enter 0 or a negative number to STOP):\n\n");

    do {
        printf("Enter a number: ");
        scanf("%d", &num);

        if (num > 0) {
            sum += num; 
        }

    } while (num > 0); 
    
printf("\n***************************************");
printf("\nYour total sum is: %d\n", sum);
printf("*************************************");
    return 0;
}
