#include <stdio.h>

int main() {
    
    char name[50];
    char section[20];
    float num1;
    float num2;
    float num3;
    float num4;
    float GeneralAverage;
   
    
printf("Enter Complete Name:  ");
fgets(name, sizeof(name), stdin);
printf("Enter Section: ");
fgets(section, sizeof(section), stdin);

printf("\nEnter 1st Quarter Grade: ");
scanf("%f", &num1);
printf("Enter 2nd Quarter Grade: ");
scanf("%f", &num2);
printf("Enter 3rd Quarter Grade: ");
scanf("%f", &num3);
printf("Enter 4th Quarter Grade:");
scanf("%f", &num4);

GeneralAverage = (num1 + num2 + num3 + num4) / 4.0;
 
printf("\nStudent: %s", name);
printf("Section: %s", section);
printf("General Average: %.2f\n", GeneralAverage);

if (GeneralAverage>= 90 && GeneralAverage<= 100){
    printf("Remarks: Outstanding");
}
else if (GeneralAverage >= 85 && GeneralAverage<= 89){
    printf("Remarks: Very Satisfactory");
    }
    else if (GeneralAverage >= 80 && GeneralAverage<= 84){
    printf("Remarks: Satisfactory");
    }
else if (GeneralAverage >=75 && GeneralAverage<= 79){
    printf("Remarks: Fair");
} 
else {
    printf("Remarks: Failed");
}
    return 0;
}

